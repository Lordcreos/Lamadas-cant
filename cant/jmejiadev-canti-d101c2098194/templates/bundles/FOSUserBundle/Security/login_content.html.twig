
<div class="container">
    <div class="row">
        <div  class="col-12 p-t-35 p-b-20">
            <form class="login100-form validate-form" action="{{ path("fos_user_security_check") }}" method="post" name="formulario" >
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <span  class="login100-form-avatar">
						<img width="500px" src="{{ asset('img/logo.png')}}" alt="Infinito">
                </span>
                <br>
                <div  class="wrap-input100 validate-input m-t-20 m-b-20" data-validate = "Enter username">
                    <input class="input100" placeHolder="{% trans %} usuario {% endtrans %}" type="text" id="username" name="_username" required="required" autocomplete="off"  maxlength="15" >
                </div>
                <br>
                <div class="wrap-input100 validate-input m-b-60" data-validate="Enter password">
                    <input class="input100" placeHolder="{% trans %}contraseña{% endtrans %}" type="password"  id="clave_ingreso" name="_password" autocomplete="new-password" required="required"  maxlength="15">
                </div>
                <br>
                <br>
                <br>
                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        {% trans %}ENTRAR{% endtrans %}
                    </button>
                </div>
                <br>
                <ul class="login-more p-t-50">
                    <li class="m-b-8">
						<span class="txt1">
							{% trans %}Olvidaste{% endtrans %}
                        </span>
                        <a href="#" class="txt2">
                            {% trans %}Usuario / Contraseña?{% endtrans %}
                        </a>
                    </li>
                </ul>
                <br>
            </form>
        </div>
    </div>
</div>
{% block javascripts %}
    <script>
        $('#login').modal('show');
        $('.modal-backdrop').css({'margin-top':$("#navegador").height()});
        $('.modal').css({'margin-top':$("#navegador").height()});
        var error = "{{ error|slice(1, 90) }}";
        if (error != ''){
            var err = error.indexOf("User account is disabled");
            if(err > 0){
                $('.alert').append('{% trans %} Usuario se encuentra inactivo! {% endtrans %}');
                $('.alert').alert();
            }else {
                $('.alert').append('{% trans %} Usuario o Contraseña, incorrectos! {% endtrans %}');
                $('.alert').alert();
            }
        }else{
            $('.alert').alert('close')
        }
    </script>
{% endblock %}